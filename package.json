{
  "private": true,
  "name": "portal",
  "version": "1.0.0",
  "workspaces": {
    "packages": [
      "packages/parser",
      "packages/renderer",
      "packages/components",
      "packages/core",
      "packages/devtools/server",
      "packages/devtools/dashboard",
      "packages/devtools/rnapp"
    ],
    "nohoist": [
      "**/react-native",
      "**/react-native/**",
      "**/react"
    ]
  },
  "scripts": {
    "start": "concurrently --kill-others-on-fail \"yarn start:server\" \"yarn start:dashboard\" \"yarn start:rnapp\"",
    "start:server": "yarn workspace @rn_portal/dev_server start:dev",
    "start:dashboard": "yarn workspace @rn_portal/dev_dashboard start",
    "start:rnapp": "yarn workspace @rn_portal/dev_rnapp start",
    "reinstall": "yarn clean:nm && yarn install",
    "clean:nm": "find . -name \"node_modules\" -type d -prune -exec rm -rf '{}' +",
    "lint:check": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "ts:check": "tsc"
  },
  "dependencies": {
    "@react-native-community/eslint-config": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "concurrently": "^6.4.0",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.1",
    "prettier": "^2.4.1",
    "typescript": "^4.5.2"
  },
  "resolutions": {
    "@types/node": "^12.0.0"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}